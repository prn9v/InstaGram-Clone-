<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.js" integrity="sha512-vHNHepeQWwAggJlhEk932jRS5sNdn/Nn4F+w4TpXW5dA+04qnd3e7YpfXo6auWhFG6z3FVhmScG4ovtF+qYeZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
  const inp = document.querySelector('#search-bar');
  const usersContainer = document.querySelector('#users');

  inp.addEventListener("input", function() {
    let clutter = ""; // Move the declaration inside the event listener to reset it on each input
    axios.get(`/username/${inp.value}`)
      .then(function(response) { // Corrected data to response for better clarity
        response.data.forEach(function(elem) {
          clutter += `<a href="/profile/${elem.username}"><div class="flex items-center justify-between mb-4 text-white rounded-lg border-2 border-zinc-700 px-4 py-4">
                        <div class="flex items-center">
                          <img src="/images/uploads/${elem.ProfileImage}" alt="profile picture" class="w-10 h-10 rounded-full mr-4 object-contain justify-center" />
                          <div>
                            <span class="font-semibold">${elem.username}</span>
                            <p class="text-muted-foreground">${elem.fullname}</p>
                          </div>
                        </div>
                      </div></a>`;
        });
        usersContainer.innerHTML = clutter; // Update the inner HTML of the #users container
      })
      .catch(function(error) {
        console.error("Error fetching data:", error);
      });
  });
</script>

</html>