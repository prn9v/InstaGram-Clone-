      <div class="flex justify-between relative">
        <input id="search-bar" type="text" placeholder="Search" class="w-[800px] p-2 pl-4 pr-10 rounded-md bg-input text-foreground border border-border focus:ring-2 focus:ring-ring focus:outline-none mt-4" />
      </div>
    </div>
      <div id="users" class="users ml-96 mt-8 text-white">
        
      </div>
